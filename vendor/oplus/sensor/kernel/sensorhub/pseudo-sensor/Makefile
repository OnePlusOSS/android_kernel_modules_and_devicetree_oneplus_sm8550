KBUILD_OPTIONS += CONFIG_PSEUDO_SENSOR=m


ifeq ($(CHIPSET_COMPANY),QCOM)
KBUILD_OPTIONS += CONFIG_OPLUS_ARCH_IS_QCOM=y
else ifeq ($(CHIPSET_COMPANY),MTK)
KBUILD_OPTIONS += CONFIG_OPLUS_ARCH_IS_MTK=y
else ifeq ($(OPLUS_VND_BUILD_CHIPSET_COMPANY),QCOM)
KBUILD_OPTIONS += CONFIG_OPLUS_ARCH_IS_QCOM=y
else ifeq ($(OPLUS_VND_BUILD_CHIPSET_COMPANY),MTK)
KBUILD_OPTIONS += CONFIG_OPLUS_ARCH_IS_MTK=y
endif


KERNEL_SRC ?= /lib/modules/$(shell uname -r)/build
M ?= $(shell pwd)
modules modules_install clean:
	$(MAKE) -C $(KERNEL_SRC) M=$(M) $(KBUILD_OPTIONS) W=1 $(@)

