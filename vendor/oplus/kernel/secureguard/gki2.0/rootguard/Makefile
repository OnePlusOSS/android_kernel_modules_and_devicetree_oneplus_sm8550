KBUILD_OPTIONS += CONFIG_OPLUS_KERNEL_SECURE_GUARD=m
KBUILD_OPTIONS += CONFIG_OPLUS_FEATURE_SECURE_ROOTGUARD=y
KBUILD_OPTIONS += CONFIG_OPLUS_FEATURE_SECURE_CAPGUARD=y
KBUILD_OPTIONS += CONFIG_OPLUS_FEATURE_SECURE_EXECGUARD=y
KBUILD_OPTIONS += CONFIG_OPLUS_FEATURE_SECURE_SRGUARD=y
KBUILD_OPTIONS += CONFIG_OPLUS_FEATURE_SECURE_SOCKETGUARD=y
KBUILD_OPTIONS += OPLUS_OUT_OF_TREE_KO=y

KERNEL_SRC ?= /lib/modules/$(shell uname -r)/build
M ?= $(shell pwd)
modules modules_install clean:
	$(MAKE) -C $(KERNEL_SRC) M=$(M) $(KBUILD_OPTIONS) $(@)
